@page "/auth/login"
@model Api.Pages.Auth.LoginModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>Casper Login</title>
    <style>
        body { font-family: system-ui; background:#f4f5f7; margin:0; }
        .wrap { min-height:100vh; display:flex; align-items:center; justify-content:center; }
        .card { width:360px; background:#fff; border-radius:12px; padding:24px; box-shadow:0 10px 30px rgba(0,0,0,.08); }
        .title { font-size:20px; font-weight:700; margin:0 0 12px; }
        .field { margin:12px 0; }
        input { width:100%; padding:10px 12px; border:1px solid #ddd; border-radius:10px; }
        button { width:100%; padding:10px 12px; border:0; border-radius:10px; background:#2563eb; color:#fff; font-weight:600; cursor:pointer; }
        .err { color:#b91c1c; margin-top:8px; font-size:13px; }
    </style>
</head>
<body>
<div class="wrap">
    <div class="card">
        <div class="title">Welcome</div>

        <form method="post" asp-antiforgery="true">
            <input type="hidden" name="returnUrl" value="@Model.ReturnUrl" />

            <div class="field">
                <input asp-for="Input.Username" placeholder="Username" autocomplete="username" />
            </div>

            <div class="field">
                <input asp-for="Input.Password" placeholder="Password" type="password" autocomplete="current-password" />
            </div>

            <button type="submit">Continue</button>

            @if (!string.IsNullOrWhiteSpace(Model.Error))
            {
                <div class="err">@Model.Error</div>
            }
        </form>
    </div>
</div>
</body>
</html>
